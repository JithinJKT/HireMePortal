@model List<Career>

<div class="row pt-4 pb-3">
    <div class="col-6">
        <h2 class="text-primary">Careers</h2>
    </div>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">
                Job
            </th>
            <th>
                Location
            </th>
            <th>Experience Range</th>
            <th>Apply</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var obj in Model)
        {
            <tr>
                <th scope="row">@obj.Name</th>
                <td>
                    @obj.Location
                </td>
                <td>
                    @obj.ExperienceRange
                </td>
                <td>
                    <a asp-controller="Career" asp-action="Apply" asp-route-id="@obj.Id" class="btn">
                        <i class="bi bi-file-earmark-plus"></i>
                    </a>
                </td>
            </tr>
        }

    </tbody>
</table>